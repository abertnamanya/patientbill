<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="org.openmrs.module.patientbill"/>

	<!-- Wraps PatientBillService methods in DB transactions and OpenMRS interceptors,
	which set audit info like dateCreated, changedBy, etc.-->
	<bean id="patientbill.PatientBillService"
	      class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager"/>
		</property>
		<property name="target">
			<bean class="org.openmrs.module.patientbill.api.impl.PatientBillServiceImpl">
				<property name="dao" ref="patientbill.PatientBillDao"/>
			</bean>
		</property>
		<property name="preInterceptors">
			<ref bean="serviceInterceptors"/>
		</property>
		<property name="transactionAttributeSource">
			<ref bean="transactionAttributeSource"/>
		</property>
	</bean>

	<!-- Adds PatientBillService to OpenMRS context so it can be accessed
	calling Context.getService(PatientBillService.class) -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.patientbill.PatientBillService</value>
				<ref bean="patientbill.PatientBillService"/>
			</list>
		</property>
	</bean>
</beans>
