<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="org.openmrs.module.patientbill"/>

	<!-- Wraps PatientCustomService methods in DB transactions and OpenMRS interceptors,
	which set audit info like dateCreated, changedBy, etc.-->
	<bean id="patientCustomService.PatientCustomService"
	      class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager"/>
		</property>
		<property name="target">
			<bean class="org.openmrs.module.patientbill.api.impl.PatientCustomServiceImpl">
				<property name="dao" ref="patientcustom.PatientCustomDao"/>
			</bean>
		</property>
		<property name="preInterceptors">
			<ref bean="serviceInterceptors"/>
		</property>
		<property name="transactionAttributeSource">
			<ref bean="transactionAttributeSource"/>
		</property>
	</bean>

	<bean id="serviceCatalogTarget" class="org.openmrs.module.patientbill.api.impl.ServiceCatalogServiceImpl">
		<property name="catalogDao" ref="serviceCatalog.ServiceCatalogDao"/>
	</bean>
	<bean id="serviceCatalog.ServiceCatalogService"
	      class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="transactionManager"/>
		<property name="target" ref="serviceCatalogTarget"/>
		<property name="preInterceptors" ref="serviceInterceptors"/>
		<property name="transactionAttributeSource" ref="transactionAttributeSource"/>
	</bean>

	<!-- Adds services to OpenMRS context so it can be accessed
	eg) calling Context.getService(PatientCustomService.class) -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
<!--				<value>org.openmrs.module.patientbill.PatientCustomService</value>-->
<!--				<ref bean="patientCustomService.PatientCustomService"/>-->
				<value>org.openmrs.module.patientbill.ServiceCatalogService</value>
				<ref bean="serviceCatalog.ServiceCatalogService"/>
			</list>
		</property>
	</bean>
</beans>
